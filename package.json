{
  "name": "getres",
  "version": "1.0.0",
  "description": "Universal Asset Loader for the Browser and Node.js",
  "main": "lib/index.js",
  "scripts": {
    "build": "browserify lib/index.js -s getres -o dist/getres.js",
    "build:min": "browserify lib/index.js -s getres | uglifyjs -c > dist/getres.min.js",
    "watch": "watchify lib/index.js -s getres -o dist/getres.js",
    "lint": "standard",
    "unit": "ava -v",
    "test": "standard && ava -v"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "lib/**/*.js"
    ]
  },
  "standard": {
    "ignore": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebSeed/universal-asset-loader.git"
  },
  "keywords": [
    "universal-asset-loader",
    "node",
    "browser",
    "asset",
    "resource",
    "loader",
    "isomorphic",
    "universal",
    "png",
    "jpeg",
    "video",
    "audio"
  ],
  "author": "Will Bamford",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WebSeed/universal-asset-loader/issues"
  },
  "homepage": "https://github.com/WebSeed/universal-asset-loader#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "browserify": "^13.1.0",
    "express": "^4.14.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.5",
    "standard": "^7.1.2",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "superagent": "^2.1.0"
  }
}
